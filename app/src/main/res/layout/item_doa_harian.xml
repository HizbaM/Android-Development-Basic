<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rljuduldoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivgambardoa"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/doaharian"
                    />
                <TextView
                    android:id="@+id/tvjuduldoa"
                    android:textColor="@color/black"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Doa Bangun Tidur"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/ivgambardoa"
                    android:maxLines="2"
                    android:fontFamily="@font/poppins_medium"
                    />

                <ImageButton
                    android:id="@+id/ibcollapse"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:backgroundTint="#5A5959"
                    android:background="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15dp"
                    />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C1C0C0"/>

            <RelativeLayout
                android:id="@+id/rlisidoa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/tvdoaarab"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="@string/doaarab"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:maxLines="10"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvdoalatin"
                    android:layout_width="350dp"
                    android:layout_below="@id/tvdoaarab"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="@string/doalatin"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="10"
                    />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>