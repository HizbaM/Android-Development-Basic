<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gambar1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/dikiralucu" />

    <ImageButton
        android:id="@+id/ibback"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/baseline_arrow_back_24" />


    <TextView
        android:id="@+id/tvproduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dikira Lucu"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/gambar1"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 15"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/tvproduk"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:textColor="#D50000"
        />

    <ImageButton
        android:id="@+id/ibfavorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/baseline_favorite_24_red"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/tvproduk"
        android:layout_marginEnd="20dp"
        />

    <ImageButton
        android:id="@+id/ibstar1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvprice"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#FBC02D"
        android:background="@drawable/baseline_star_24" />

    <ImageButton
        android:id="@+id/ibstar2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvprice"
        android:layout_toRightOf="@id/ibstar1"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#FBC02D"
        android:background="@drawable/baseline_star_24" />

    <ImageButton
        android:id="@+id/ibstar3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvprice"
        android:layout_toRightOf="@id/ibstar2"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#FBC02D"
        android:background="@drawable/baseline_star_24" />

    <ImageButton
        android:id="@+id/ibstar4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvprice"
        android:layout_toRightOf="@id/ibstar3"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#FBC02D"
        android:background="@drawable/baseline_star_24" />
    <ImageButton
        android:id="@+id/ibstar5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/tvprice"
        android:layout_toRightOf="@id/ibstar4"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="#AEAEAE"
        android:background="@drawable/baseline_star_24" />

    <TextView
        android:id="@+id/tvratingnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.0"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@id/tvprice"
        android:layout_toRightOf="@id/ibstar5"
        android:layout_marginTop="2dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/black"
        />

    <View
        android:id="@+id/viewabu"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ibstar1"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="20dp"
        android:background="#C3C1C1" />

    <TextView
        android:id="@+id/tvinfo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/viewabu"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvinfo1detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewabu"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tvinfo1"
        android:fontFamily="@font/poppins_semibold"
        android:text="Ban Kempes"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvinfo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipe"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/tvinfo1"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvinfo2detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvinfo1detail"
        android:layout_centerInParent="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tvinfo2"
        android:fontFamily="@font/poppins_semibold"
        android:text="Tipes"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvinfo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dimesions"
        android:textSize="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_semibold"
        android:layout_below="@+id/tvinfo2"
        android:layout_marginTop="4dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/tvinfo3detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvinfo2detail"
        android:layout_centerInParent="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="83dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/tvinfo3"
        android:fontFamily="@font/poppins_semibold"
        android:text="Anime"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvinfo3"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:text="Purchase"
        android:textSize="20sp"
        android:backgroundTint="#D50000"
        />




</RelativeLayout>